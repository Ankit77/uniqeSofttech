<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="normal_label">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="normal_edittext">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:padding">@dimen/_7sdp</item>
        <item name="android:background">@drawable/edittext_border</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="normal_button">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
